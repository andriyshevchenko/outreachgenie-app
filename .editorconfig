# Tests can have more relaxed documentation requirements
dotnet_diagnostic.SA1600.severity = none  # Elements should be documented
dotnet_diagnostic.CS1591.severity = none  # Missing XML comment

# Allow multiple assertions per test file (not per test method)
dotnet_diagnostic.CA1062.severity = none  # Validate arguments of public methods

# Test-specific rules
dotnet_diagnostic.CA1707.severity = none  # Identifiers should not contain underscores (test names often do)
dotnet_diagnostic.CA1861.severity = error  # Avoid constant arrays as arguments (use const)
dotnet_diagnostic.CA2007.severity = none  # Do not directly await (simpler test code)
dotnet_diagnostic.CA1806.severity = error  # Do not ignore method results

# [T14-H] Tests must close all resources they open
dotnet_diagnostic.CA2000.severity = error  # Dispose objects before losing scope
dotnet_diagnostic.CA1001.severity = error  # Types that own disposable fields should be disposable
