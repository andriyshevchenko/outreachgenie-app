# OutreachGenie Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# LLM Provider (OpenAI)
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
# Used for: Agent decision-making, chat responses, content generation
OPENAI_API_KEY=sk-your_openai_api_key_here

# =============================================================================
# Web Search (Exa AI)
# =============================================================================
# Get your API key from: https://exa.ai/
# Used for: AI-powered web search, company research, prospect discovery
EXA_API_KEY=your_exa_api_key_here

# =============================================================================
# Agent Background Service Configuration
# =============================================================================
# How often (in milliseconds) the agent checks for active campaigns
POLLING_INTERVAL_MS=60000

# Maximum number of campaigns processed simultaneously
# Recommended: 1 (avoid LinkedIn rate limits)
MAX_CONCURRENT_CAMPAIGNS=1

# =============================================================================
# Browser Session Storage
# =============================================================================
# Where LinkedIn session cookies are stored
# Windows: %APPDATA%/OutreachGenie/browser-sessions
# macOS: ~/Library/Application Support/OutreachGenie/browser-sessions
# Linux: ~/.config/OutreachGenie/browser-sessions
BROWSER_SESSION_PATH=%APPDATA%/OutreachGenie/browser-sessions

# =============================================================================
# Database Configuration
# =============================================================================
# SQLite database path (local-first storage)
DATABASE_PATH=./outreachgenie.db

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level: Trace | Debug | Information | Warning | Error | Critical
LOG_LEVEL=Information

# Log file path
LOG_PATH=~/Documents/OutreachGenie/logs

# =============================================================================
# Rate Limiting (Post-MVP)
# =============================================================================
# Maximum chat messages per minute
CHAT_RATE_LIMIT=10

# Maximum concurrent Exa searches
EXA_CONCURRENCY_LIMIT=3

# =============================================================================
# Security (Post-MVP)
# =============================================================================
# Enable secure credential storage (Windows Credential Manager / macOS Keychain)
USE_SECURE_STORAGE=false

# =============================================================================
# .NET Aspire (Post-MVP)
# =============================================================================
# Enable Aspire orchestration dashboard
ENABLE_ASPIRE=false

# =============================================================================
# Notes
# =============================================================================
# - Never commit .env file to version control
# - API keys are user-specific (each user provides their own)
# - This app runs locally on user machines, not cloud-deployed
# - See README.md for setup instructions
