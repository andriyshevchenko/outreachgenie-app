{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=outreachgenie.db"
  },
  "AgentSettings": {
    "PollingIntervalMs": 60000,
    "MaxConcurrentCampaigns": 1,
    "WorkingDirectoryBase": "%USERPROFILE%\\Documents\\OutreachGenie\\campaigns"
  },
  "LlmSettings": {
    "Temperature": 0.7,
    "MaxTokens": 2000,
    "Model": "gpt-4",
    "MaxRetries": 3,
    "TimeoutSeconds": 60
  }
}